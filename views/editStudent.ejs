<div class="row">
  <div class="col-sm-6">
    <ol class="breadcrumb">
      <li class="breadcrumb-item ">
        <a href="/student/list">All Students</a>
      </li>
      <li class="breadcrumb-item active">Edit</li>
    </ol>
    <h1 class="display-4">Edit student</h1>
    <form method="post" action="/student/update/<%= student.id %>">
      <div class="form-group">
        <label for="name">name</label>
        <input type="text" name="name" class="form-control" value="<%= student.name %>">
      </div>
      <input type="submit" value="Submit" class="btn btn-primary">
    </form>
  </div>
  <div class="col-md-6">
    <h1 class="display-4">All teachers</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Class</th>
        </tr>
      </thead>
      <tbody>
        <% teachers.forEach(function(teacher){ %>
          <tr>
            <td>
              <%= teacher.name %>
            </td>
            <td>
              <%= teacher.className %>
            </td>
            <td>
              <a href="/student/<%= student.id %>/students/">List</a>
              <form class="d-inline" action="/student/<%= student.id %>/teachers/add" method="post">
                <input type="hidden" name="studentId" value="<%= student.id %>" />
                <input type="hidden" name="teacherId" value="<%= teacher.id%>" />
                <input type="submit" value="Take this Class" class="btn">
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>